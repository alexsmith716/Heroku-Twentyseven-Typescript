{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "typeRoots": ["type-declarations", "node_modules/@types"],
  },
  "include": [
    "./src/**/*.tsx",
  ],
  "exclude": [
    "build",
    "node_modules",
  ]
}
